.page-footer
	margin-top 5.55555%
	padding-bottom 2.77778%
	font 1rem $articleMainFont
	background-color $headBgClr
	color $textLightClr
		
	&__additional
		width 62.5rem
		margin 4.4% auto 0
		padding 0 1.25rem
		display(flex)
		flex-direction(normal)
		flex-direction(row)
		flex-wrap(wrap)
		justify-content(space-between)
		align-items(stretch)
		+below(66em)
			box-sizing border-box
			width 43.75rem
			height auto
			padding 0 1rem
		+below(47em)	
			width 34.25rem
			padding 0 3.425rem//0.9rem
		+below(37em)
			width 18rem
			height 7rem
			margin-top 3%
			padding 0 1.8rem
			flex-direction(column)
			align-items(center)
			justify-content(flex-start)
		+below(29em)
			box-sizing border-box
			width 100%
			
	&__logo
		display block
		size 8.8325em 2.125em
		background url('data:image/svg+xml;base64,') 0 0 no-repeat
		background-size contain
		&:focus
			outline none
		+below(47em)
			display none
			
	&__slogan
		margin 0
		height 2.125rem
		line-height @height
		color $footerfontClr
		+below(66em)
			width 70%
			line-height 1.3
		+below(47em)
			width auto



/*********************************************************/
/*          block site-map styles
/*********************************************************/	
.site-map
	position relative
	width 62.5rem
	margin 0 auto
	padding 3.125rem 1.25rem 0
	display(flex)
	flex-direction(normal)
	flex-direction(row)
	flex-wrap(wrap)
	justify-content(space-between)
	align-items(flex-srart)
	+below(66em)
		box-sizing border-box
		width 43.75rem
	+below(47em)
		width 34.25rem
		padding 3.125rem 0 0
	+below(37em)
		width 18rem	
		
	&__rubrics
		width 77%
		display(flex)
		flex-direction(normal)
		flex-direction(row)
		flex-wrap(wrap)
		justify-content(space-between)
		align-items(stretch)
		order 1
		+below(47em)
			width 80%
			margin 0 auto
		
	&__title
		width 100%
		height 2.5em
		margin 0
		font-size 0.875em
		letter-spacing .04em
		border-bottom 0.12em solid lighten($headBgClr, 5%)
		
	&__col
		margin 1rem 0 0 0
		width 9.5rem
		&:last-child
			margin-right 0
		+below(66em)
			width 7.5rem
		+below(47em)
			width 40%
		
	&__about
		width 20%
		height 6.75rem
		order 2
		+below(47em)
			width calc( 27.4rem * 0.4 )
			margin-top 1.25rem
			margin-left 3.425rem
			.site-map__title
				border-bottom none
			.site-map__col
				margin-top 0
				width 100%
		+below(37em)
			width 7em
			margin-left 1.8rem
				
	&__we-near
		width 20%
		order 3
		margin-left auto
		margin-top -4.15rem
		+below(47em)
			width calc( 27.4rem * 0.3 )
			margin 1.25rem 6.1rem 0 2rem
		+below(37em)
			width 35%
			margin 1.25rem 1.25rem 0 1rem
		.site-map__title
			border-bottom none
	
	&__link
		display block
		height auto
		line-height 2.2
		text-decoration none
		font-size 0.875em
		color $footerfontClr
		transition all 0.3s ease 0.1s
		+below(47em)
			line-height 2
		&:hover
		&:active
		&:focus
			outline none
			color lighten($footerfontClr, 60%)


/*********************************************************/
/*          block socials-footer styles
/*********************************************************/	
.socials-footer
	margin-left -.7em
	width 100%
	&__link
		display inline-block
		position relative
		size 1.5em 1.5em
		margin-right .4em
		text-decoration none
		color lighten($headBgClr, 35%)
		background-color transparent
		transition all 0.3s ease 0.1s
		&:nth-child(1):before
			addIconFont( '\e801', 15%, 30% )
			font-size 1.2em
		&:nth-child(2):before
			addIconFont( '\e802', 15%, 0 )
			font-size 1.2em
		&:nth-child(3):before
			addIconFont( '\e803', 15%, 10% )
			font-size 1em
			margin-right 0
		&:hover
		&:active
		&:focus
			color lighten($headBgClr, 75%)
		
			
			


