/*********************************************************/
/*          block grid-wrapper styles
/*********************************************************/
.interest-to-read-grid
	display(flex)
	flex-direction(normal)
	flex-direction(row)
	flex-wrap(wrap)
	justify-content(space-between)
	align-items(space-between)
	align-content(space-between)
	width 62.5rem
	margin 3.15% auto 0
	padding 0 1.25rem
	+below(66em)
		width 43.75rem
		padding 0 1rem
	+below(47em)
		width 34.25rem
		padding 0 0.9rem
	+below(37em)
		width 18.0rem
		height 101rem
		margin-right auto
		margin-left auto
	+below(29em)
		padding 0


/*********************************************************/
/*          block interest-to-read styles
/*********************************************************/
.interest-to-read
	box-sizing border-box
	margin-top 3.5%
	padding 4.2% 0 6.25%
	background-color $interestBgClr
	font-size 1rem
	+below(66em)
		padding-bottom 3.25%

	&__title
		margin 0
		font 2.2em $mainTitleFont
		text-align center
		+below(66em)
			font-size 1.7em
		+below(47em)
			font-size 1.5em
		+below(37em)
			width 65%
			margin 0 auto
			text-align center
		+below(26em)
			width 80%

		
	&__article
		width	calc( 100% / 4 - 1rem )
		margin 2.5rem 0 0
		text-decoration none
		&:last-child
			margin-right 0
		+below(66em)
			margin-top 1.73rem
		+below(47em)
			width	calc( 100% / 2 - .5rem )
			&:nth-child(odd)
				margin-right 0
		+below(37em)
			width 100%
			margin 1.2rem 0 0 0

	&__article-description
		position relative
	&__content
		position relative
		margin 0
		&:before
			content ''
			position absolute
			top 0
			left 0
			width 100%
			height 50%
			background-color transparent
			opacity .2
			z-index 20
			transition all .3s ease .1s
			+below(66em)
				height 39.3%
			+below(47em)
				height 55.6%
			+below(37em)
				height 57.1%
	&__article:nth-child(5)
		.interest-to-read__content:before
			+below(37em)
				height 60.5%

	&__article-pic
		display block
		position relative
		width 100%
		min-width 100%
		height auto
		z-index 0
		
	&__article-subtitle
		margin 7.2% auto
		font 1em $mainTitleFont
		color $plainTextClr
		transition all .3s ease .1s
		+below(47em)
			margin 5% auto
			
	&__article-info
		margin 0
		width 100%
		height 5.5em
		font-family $articleMainFont
		line-height 1.4
		color #95959e
		transition all .3s ease .1s
		overflow hidden
		text-overflow ellipsis
		+below(47em)
			height 5em
			line-height 1.3
			
	&__article-pubdate
		position absolute
		top 0
		left 2em
		z-index 30
		height .9rem
		line-height .9rem
		padding-left .8rem
		font .8em $articleMainFont
		color transparent
		background url('data:image/svg+xml;base64,') 0 0 no-repeat
		background-size 10%
		opacity 0
		transition all .3s ease .1s
		+below(66em)
			top -3.4em
			font-size .7em
			color $textLightClr
				
	&__article-views
		position absolute
		top 0
		left 10em
		z-index 30
		height .9rem
		line-height .9rem
		padding-left .9rem
		font .8em $articleMainFont
		color transparent
		background url('data:image/svg+xml;base64,') 0 0 no-repeat
		background-size 30%
		opacity 0
		transition all .3s ease .1s
		+below(66em)
			top -3.4em
			color $textLightClr
			font-size .7em
		
	
/*styling interactions*/
.interest-to-read__article			
	&:focus
	&:hover
	&:active
		outline none
		.interest-to-read__article-subtitle
			color $hvrArticleTextClr 
		.interest-to-read__article-pubdate
		.interest-to-read__article-views
			top -3.4em
			color $textLightClr
			opacity 1

/*addind semi-transparet bg*/

addInterestSemiBg(1, #00CAC7)
addInterestSemiBg(2, blue)
addInterestSemiBg(3, #F60086)
addInterestSemiBg(4, #00B367)
addInterestSemiBg(5, #F60086)


//styling :first-child
.interest-to-read__article:first-child
	width 100%
	position relative
	margin 0
	+below(37em)
		margin-top 1rem
	
	.interest-to-read__content
		&:before
			height 100%
			
	.interest-to-read__article-description
		position absolute
		width 100%
		bottom 0
		left 0
		
	.interest-to-read__article-subtitle
		position relative
		top 0
		margin 2.0% auto
		font-size 2.3em
		letter-spacing 0.03em
		color $textLightClr
		text-align center
		+below(66em)
			font-size 1.7em
			top -.4em
		+below(47em)
			font-size 1.4em
		+below(37em)
			font-size 1em
			color darken($textLightClr, 10%)
			
	.interest-to-read__article-info
		position relative
		top 0
		width 62.5%
		margin 0 auto 5%
		padding 0 3%
		font-size 1.3em
		line-height 1.4
		letter-spacing 0.03em
		color $textLightClr
		text-align center
		+below(66em)
			width 80%
			height 2.5em
			font-size 1em
			line-height 1.3
			top -.6em
		+below(47em)
			margin-bottom 1%
		+below(37em)
			font-size .8em
			
	.interest-to-read__article-views
		position relative
		top 1.5em
		left 49%
		z-index 20
		+below(66em)
			display none
			
	.interest-to-read__article-pubdate
		display none
	&:hover
	&:active
		.interest-to-read__article-subtitle
			top -.4em
		.interest-to-read__article-info
			color $textLightClr
			top -.6em
		.interest-to-read__article-views
			top -5.5em