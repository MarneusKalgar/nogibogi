/*this mixin adds icons to social links and buttons*/
addIconFont( code, posTop, posLeft)
	content code
	position absolute
	top posTop
	left posLeft
	font $iconFont 
	speak none
	font-variant normal
	text-transform none
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale


/*this mixin adds bg colour to social buttons*/
addBtnColour(child, colour)
	&:nth-child({child})
		background-color colour
		&:hover
		&:focus
			background-color darken(colour, 20%)
		&:active
			background-color darken(colour, 20%)
			box-shadow inset 0 0 .3em .1em rgba(#000,.5)
			

