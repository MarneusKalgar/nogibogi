/*This mixin adds semitransparent bg to Interest-to-read articles*/
addInterestSemiBg(childNum, color)
	.interest-to-read__article:nth-child({childNum})
		&:hover
		&:active
			.interest-to-read__content:before
				background-color color
		+below(66em)
			.interest-to-read__content:before
				background-color color

/*This mixin adds semitransparent bg to Front page articles*/
addFrontSemiBg(childNum, color)
	.front-page__article:nth-child({childNum})
		&:hover
		&:active
			.front-page__content:before
				background-color color
		+below(66em)
			.front-page__content:before
				background-color color
