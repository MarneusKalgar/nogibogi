/*****************************************/
/*Px-to-Em&Rem converter                 */
/*****************************************/
$baseFontSize = 16
$px = ( 1 / $baseFontSize ) rem

px( val, base = 'none' )
	if base == 'none'
		( val / $baseFontSize ) rem
	else
		( val / base ) em


